% Personen
\newcommand*{\nam}[1]{\textsc{#1}\index{#1}}
% Person mit flektiertem Namen (für korrekten Index)
\newcommand*{\Nam}[2]{\textsc{#2}\index{#1}}
% umgeändert in Begriffe eines Jargons oder aus einem bestimmten Werk
\newcommand*{\jar}[1]{\enquote*{#1}}
% Begriffe des NS -- nur noch aus Kompatibilitätsgründen
\newcommand*{\nat}[1]{\enquote*{#1}}
% Gesetze
\newcommand*{\ges}[1]{\emph{#1}\index{#1}}
% Gesetz mit flektiertem Namen (für korrekten Index)
\newcommand*{\Ges}[2]{\emph{#2}\index{#1}}
% geographischer Begriff
\newcommand*{\ort}[1]{\emph{#1}\index{#1}}
% geographischer Begriff mit flektiertem Namen (für korrekten Index)
\newcommand*{\Ort}[2]{\emph{#2}\index{#1}}
% Institution
\newcommand*{\ins}[1]{\emph{#1}\index{#1}}
% Institution mit flektiertem Namen (für korrekten Index)
\newcommand*{\Ins}[2]{\emph{#2}\index{#1}}
% was für Marginalspalten
\newcommand*{\mar}[1]{\marginline{\footnotesize #1}}
% römische Zahlen
\newcommand*{\Rm}[1]{\MakeUppercase{\romannumeral #1{.}}}

