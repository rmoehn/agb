% Liste, wie sie im Kamelbuch für die typographischen Konventionen
% verwendet wird
\newcommand*{\perldesclbl}[1]{%
    \parbox[b]{\labelwidth}%
    {\makebox[0pt][l]{#1}\\\mbox{}\hfill}}
\newenvironment*{perldesc}%
{%
  \begin{list}{}%
  {%
    \let\makelabel\perldesclbl%
    \setlength\labelwidth{40pt}%
    \newlength{\sumlength}
    \addtolength{\sumlength}{\labelwidth}
    \addtolength{\sumlength}{\labelsep}
    \setlength\leftmargin{\sumlength}%
  }%
}%
{%
  \end{list}
}
